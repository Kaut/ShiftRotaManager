@model IEnumerable<ShiftRotaManager.Data.Models.TeamMember>

@{
    ViewData["Title"] = "Team Members";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-0">Manage Team Members</h1>
        <p class="text-muted mb-0">Add, edit, or remove members from your team.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm">
        <i class="bi bi-person-plus-fill me-2"></i>Add New Member
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th scope="col" class="ps-4">Full Name</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.FirstOrDefault()!.Email)</th>
                        <th scope="col" class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-medium">
                                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td class="text-end pe-4">
                                    <div class="d-inline-flex gap-2">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary rounded-circle" data-bs-toggle="tooltip" title="Edit">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-circle" data-bs-toggle="tooltip" title="Delete">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center p-4">
                                <p class="mb-1 text-muted">No team members have been added yet.</p>
                                <a asp-action="Create" class="btn btn-sm btn-primary rounded-pill px-3 mt-2">Add the first one</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>