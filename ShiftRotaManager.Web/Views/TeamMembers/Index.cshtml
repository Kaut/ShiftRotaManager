@model IEnumerable<ShiftRotaManager.Data.Models.TeamMember>

@{
    ViewData["Title"] = "Team Members";
}

@functions {
    string GetInitials(string firstName, string lastName)
    {
        var first = !string.IsNullOrEmpty(firstName) ? firstName.Substring(0, 1) : "";
        var last = !string.IsNullOrEmpty(lastName) ? lastName.Substring(0, 1) : "";
        return $"{first}{last}".ToUpper();
    }

    string GetRoleBorderClass(string role)
    {
        return role?.ToLower() switch
        {
            "manager" => "border-primary",
            "engineer" => "border-info",
            "team lead" => "border-danger",
            _ => "border-secondary" // Default for 'Employee' or other roles
        };
    }
}

<style>
    .card-team-member {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        border-left: 4px solid;
    }

    .card-team-member:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }

    .avatar {
        width: 80px;
        height: 80px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        background-color: #6c757d; /* Bootstrap secondary */
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-0">Manage Team Members</h1>
        <p class="text-muted mb-0">Add, edit, or remove members from your team.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm">
        <i class="bi bi-person-plus-fill me-2"></i>Add New Member
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm card-team-member @GetRoleBorderClass(item.Role?.Name)">
                    <div class="card-body text-center d-flex flex-column">
                        <div class="avatar text-white rounded-circle mb-3 mx-auto">
                            <span class="fw-bold">@GetInitials(item.FirstName, item.LastName)</span>
                        </div>
                        <h5 class="card-title mb-1">@item.FirstName @item.LastName</h5>
                        <p class="card-text text-muted">@item.PreferredShift.Name</p>
                        <p class="card-text text-muted text-capitalize small">@item.PreferredDaysOfWeek</p>
                        <p class="card-text text-capitalize fw-bold text-muted small mb-4">@item.Role?.Name</p>

                        <div class="mt-auto">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary rounded-pill px-3" data-bs-toggle="tooltip" title="Edit">
                                <i class="bi bi-pencil-fill me-1"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-pill px-3" data-bs-toggle="tooltip" title="Delete">
                                <i class="bi bi-trash-fill me-1"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center p-5 bg-light rounded-3">
        <i class="bi bi-people-fill display-4 text-muted"></i>
        <h3 class="mt-3">No Team Members Yet</h3>
        <p class="lead text-muted">It looks a bit empty here. Why not add the first team member?</p>
        <a asp-action="Create" class="btn btn-lg btn-primary rounded-pill px-4 mt-3">
            <i class="bi bi-person-plus-fill me-2"></i>Add the First Member
        </a>
    </div>
}