@{
    ViewData["Title"] = "Dashboard";
}

@section Styles {
    <!-- FullCalendar CSS - Loaded locally -->
    <link href="../../css/pages/calendar/main.min.css" rel="stylesheet" />
}

<h1 class="my-4">Dashboard</h1>

<div class="row g-4">
    <!-- Total Team Members -->
    <div class="col-lg-4 col-md-6">
        <a asp-controller="TeamMembers" asp-action="Index" class="card-link">
            <div class="card p-3 shadow-sm border-0 rounded-3 h-100">
                <div class="d-flex align-items-center">
                    <div class="icon-shape bg-primary text-white rounded-circle me-3">
                        <i class="fas fa-users p-3 fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 text-muted">Total Team Members</h5>
                        <h2 class="mb-0 fw-bold">@ViewBag.TeamMemberCount</h2>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <!-- Total Shifts -->
    <div class="col-lg-4 col-md-6">
        <a asp-controller="Shifts" asp-action="Index" class="card-link">
            <div class="card p-3 shadow-sm border-0 rounded-3 h-100">
                <div class="d-flex align-items-center">
                    <div class="icon-shape bg-success text-white rounded-circle me-3">
                        <i class="fas fa-clock p-3 fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 text-muted">Total Shifts</h5>
                        <h2 class="mb-0 fw-bold">@ViewBag.ShiftCount</h2>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <!-- Total Roles -->
    @* <div class="col-lg-3 col-md-6">
        <a asp-controller="Roles" asp-action="Index" class="card-link">
            <div class="card p-3 shadow-sm border-0 rounded-3 h-100">
                <div class="d-flex align-items-center">
                    <div class="icon-shape bg-info text-white rounded-circle me-3">
                        <i class="fas fa-briefcase p-3 fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 text-muted">Total Roles</h5>
                        <h2 class="mb-0 fw-bold">@ViewBag.RoleCount</h2>
                    </div>
                </div>
            </div>
        </a>
    </div> *@

    <!-- Open Shifts -->
    <div class="col-lg-4 col-md-6">
        <a asp-controller="Rotas" asp-action="Calendar" class="card-link">
            <div class="card p-3 shadow-sm border-0 rounded-3 h-100">
                <div class="d-flex align-items-center">
                    <div class="icon-shape bg-warning text-white rounded-circle me-3">
                        <i class="fas fa-exclamation-triangle p-3 fs-4"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 text-muted">Open Shifts</h5>
                        <h2 class="mb-0 fw-bold">@ViewBag.OpenShiftCount</h2>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>

<div class="row g-4 mt-4">
    <!-- Upcoming Events Calendar -->
    <div class="col-lg-8">
        <div class="card shadow-sm border-0 rounded-3 h-100">
            <div class="card-body">
                <h5 class="card-title">Rota Overview</h5>
                <div id="dashboard-calendar" data-calendar-url="@Url.Action("Calendar", "Rotas")"></div>
            </div>
        </div>
    </div>
    
    <!-- Quick Actions -->
    <div class="col-lg-4">
        <div class="card shadow-sm border-0 rounded-3 h-100">
            <div class="card-body">
                <h5 class="card-title">Quick Actions</h5>
                <div class="list-group list-group-flush mt-3">
                    <a asp-controller="Rotas" asp-action="Create" class="list-group-item list-group-item-action border-0 rounded-3 mb-2 bg-light">
                        <i class="fas fa-plus-circle me-2 text-primary"></i> Create New Rota
                    </a>
                    <a asp-controller="TeamMembers" asp-action="Create" class="list-group-item list-group-item-action border-0 rounded-3 mb-2 bg-light">
                        <i class="fas fa-user-plus me-2 text-success"></i> Add Team Member
                    </a>
                    <a asp-controller="Shifts" asp-action="Create" class="list-group-item list-group-item-action border-0 rounded-3 mb-2 bg-light">
                        <i class="fas fa-business-time me-2 text-info"></i> Define New Shift
                    </a>
                    <a asp-controller="Rotas" asp-action="Calendar" class="list-group-item list-group-item-action border-0 rounded-3 mb-2 bg-light">
                        <i class="fas fa-search me-2 text-warning"></i> View Full Calendar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- FullCalendar JS Imports -->
    @* <script src='../../js/pages/calendar/index.global.min.js'></script>
    <script src='../../js/pages/calendar/index.global.min.js'></script> *@
    <script src='../../js/pages/dashboard/index.js'></script>
}
