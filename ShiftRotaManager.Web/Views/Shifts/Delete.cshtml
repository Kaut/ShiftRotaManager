@model ShiftRotaManager.Data.Models.Shift

@{
    ViewData["Title"] = "Delete Shift";
}

<h1 class="text-center mb-4">Delete Shift</h1>

<h3 class="text-danger text-center">Are you sure you want to delete this shift?</h3>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm rounded-3">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => @Model.Name)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => @Model.Name)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => @Model.StartTime)
                    </dt>
                    <dd class="col-sm-8">
                        @Model.StartTime.ToString(@"hh\:mm")
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => @Model.EndTime)
                    </dt>
                    <dd class="col-sm-8">
                        @Model.EndTime.ToString(@"hh\:mm")
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => @Model.IsNightShift)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => @Model.IsNightShift)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => @Model.MinStaffRequired)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => @Model.MinStaffRequired)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => @Model.MaxStaffAllowed)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => @Model.MaxStaffAllowed)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger rounded-pill">Delete</button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>