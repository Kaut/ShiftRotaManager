@using Microsoft.CodeAnalysis.Scripting
@model IEnumerable<ShiftRotaManager.Data.Models.Shift>

@{
    ViewData["Title"] = "Shifts";
}

@functions {
    string GetShiftBorderClass(string shiftName)
    {
        return shiftName?.ToLower() switch
        {
            "morning shift" => "border-primary",
            "evening shift" => "border-secondary",
            "night shift" => "border-dark",
            "day shift" => "border-success",
            _ => "border-info"
        };
    }
}


<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-0">Manage Shifts</h1>
        <p class="text-muted mb-0">View, create, and edit shift schedules.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm">
        <i class="bi bi-plus-lg me-2"></i>Create New Shift
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm card-shift @GetShiftBorderClass(item.Name)">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@item.Name</h5>
                            <span class="badge rounded-pill @(item.IsNightShift ? "text-bg-dark" : "text-bg-info-subtle text-info-emphasis")">
                                <i class="bi @(item.IsNightShift ? "bi-moon-stars-fill" : "bi-sun-fill")"></i>
                                @(item.IsNightShift ? "Night" : "Day")
                            </span>
                        </div>

                        <div class="text-muted mb-3">
                            <i class="bi bi-clock-fill me-1"></i>
                            @item.StartTime.ToString(@"hh\:mm") &ndash; @item.EndTime.ToString(@"hh\:mm")
                        </div>

                        <div class="d-flex justify-content-around text-center my-3 py-3 bg-light rounded">
                            <div>
                                <small class="text-muted d-block">Min Staff</small>
                                <span class="fw-bold fs-5">@item.MinStaffRequired</span>
                            </div>
                            <div>
                                <small class="text-muted d-block">Max Staff</small>
                                <span class="fw-bold fs-5">@item.MaxStaffAllowed</span>
                            </div>
                        </div>

                        <div class="mt-auto text-center">
                            <div class="d-inline-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary rounded-pill px-3" data-bs-toggle="tooltip" title="Edit">
                                    <i class="bi bi-pencil-fill me-1"></i> Edit
                                </a>
                                @* <a asp-action="CreateVariant" asp-route-baseShiftId="@item.Id" class="btn btn-sm btn-outline-info rounded-pill px-3" data-bs-toggle="tooltip" title="Add Variant">
                                    <i class="bi bi-plus-circle-dotted me-1"></i> Variant
                                </a> *@
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-pill px-3" data-bs-toggle="tooltip" title="Delete">
                                    <i class="bi bi-trash-fill me-1"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center p-5 bg-light rounded-3">
        <i class="bi bi-calendar2-x-fill display-4 text-muted"></i>
        <h3 class="mt-3">No Shifts Created Yet</h3>
        <p class="lead text-muted">Get started by creating the first shift for your rota.</p>
        <a asp-action="Create" class="btn btn-lg btn-primary rounded-pill px-4 mt-3">
            <i class="bi bi-plus-lg me-2"></i>Create the First Shift
        </a>
    </div>
}

