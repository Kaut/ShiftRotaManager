@model IEnumerable<ShiftRotaManager.Data.Models.Shift>

@{
    ViewData["Title"] = "Shifts";
}

<h1 class="text-center mb-4">Shifts</h1>

<p>
    <a asp-action="Create" class="btn btn-primary rounded-pill">Create New Shift</a>
</p>
<table class="table table-striped table-hover rounded-3 overflow-hidden">
    <thead class="bg-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsNightShift)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinStaffRequired)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxStaffAllowed)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @item.StartTime.ToString(@"hh\:mm")
                </td>
                <td>
                    @item.EndTime.ToString(@"hh\:mm")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsNightShift)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinStaffRequired)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxStaffAllowed)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-pill">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-pill">Delete</a> |
                    <a asp-action="CreateVariant" asp-route-baseShiftId="@item.Id" class="btn btn-sm btn-outline-info rounded-pill">Add Variant</a>
                </td>
            </tr>
        }
    </tbody>
</table>