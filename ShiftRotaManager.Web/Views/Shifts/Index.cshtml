@model IEnumerable<ShiftRotaManager.Data.Models.Shift>

@{
    ViewData["Title"] = "Shifts";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-0">Manage Shifts</h1>
        <p class="text-muted mb-0">View, create, and edit shift schedules.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm">
        <i class="bi bi-plus-lg me-2"></i>Create New Shift
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th scope="col" class="ps-4">@Html.DisplayNameFor(model => model.FirstOrDefault()!.Name)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.FirstOrDefault()!.StartTime)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.FirstOrDefault()!.EndTime)</th>
                        <th scope="col" class="text-center">@Html.DisplayNameFor(model => model.FirstOrDefault()!.IsNightShift)</th>
                        <th scope="col" class="text-center">@Html.DisplayNameFor(model => model.FirstOrDefault()!.MinStaffRequired)</th>
                        <th scope="col" class="text-center">@Html.DisplayNameFor(model => model.FirstOrDefault()!.MaxStaffAllowed)</th>
                        <th scope="col" class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-medium">@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@item.StartTime.ToString(@"hh\:mm")</td>
                                <td>@item.EndTime.ToString(@"hh\:mm")</td>
                                <td class="text-center">
                                    <span class="badge rounded-pill @(item.IsNightShift ? "text-bg-dark" : "bg-light text-dark border")">
                                        @(item.IsNightShift ? "Yes" : "No")
                                    </span>
                                </td>
                                <td class="text-center">@Html.DisplayFor(modelItem => item.MinStaffRequired)</td>
                                <td class="text-center">@Html.DisplayFor(modelItem => item.MaxStaffAllowed)</td>
                                <td class="text-end pe-4">
                                    <div class="d-inline-flex gap-2">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary rounded-circle" data-bs-toggle="tooltip" title="Edit">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        <a asp-action="CreateVariant" asp-route-baseShiftId="@item.Id" class="btn btn-sm btn-outline-info rounded-circle" data-bs-toggle="tooltip" title="Add Variant">
                                            <i class="bi bi-plus-circle-dotted"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-circle" data-bs-toggle="tooltip" title="Delete">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center p-4">
                                <p class="mb-1 text-muted">No shifts have been created yet.</p>
                                <a asp-action="Create" class="btn btn-sm btn-primary rounded-pill px-3 mt-2">Create the first one</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>