@model ShiftRotaManager.Data.Models.Rota

@{
    ViewData["Title"] = "Assign Open Shift";
}

<h1 class="text-center mb-4">Assign Open Shift</h1>

<h3 class="text-info text-center">Assign a team member to this open shift.</h3>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm rounded-3 mb-3">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        Date
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Date)
                    </dd>
                    <dt class="col-sm-4">
                        Shift Name
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Shift.Name)
                    </dd>
                    <dt class="col-sm-4">
                        Current Status
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                </dl>
            </div>
        </div>

        <form asp-action="AssignOpenShift">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label for="teamMemberId" class="form-label">Assign Team Member</label>
                <select id="teamMemberId" name="teamMemberId" class="form-control rounded" asp-items="ViewBag.TeamMembers">
                    <option value="">-- Select Team Member --</option>
                </select>
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success rounded-pill">Assign Shift</button>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}