@model ShiftRotaManager.Data.Models.Rota

@{
    ViewData["Title"] = "Delete Rota Assignment";
}

<h1 class="text-center mb-4">Delete Rota Assignment</h1>

<h3 class="text-danger text-center">Are you sure you want to delete this rota assignment?</h3>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm rounded-3">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Date)
                    </dd>
                    <dt class="col-sm-4">
                        Shift Name
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Shift.Name)
                    </dd>
                    <dt class="col-sm-4">
                        Assigned Team Member
                    </dt>
                    <dd class="col-sm-8">
                        @(Model.TeamMember?.FirstName + " " + Model.TeamMember?.LastName ?? "N/A (Open Shift)")
                    </dd>
                    <dt class="col-sm-4">
                        Paired Team Member
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.PairedTeamMembers != null && Model.PairedTeamMembers.Any())
                            {
                                @string.Join(", ", Model.PairedTeamMembers.Select(tm => $"{tm.FirstName} {tm.LastName}"))
                            }
                            else
                            {
                                @:<span class="text-muted fst-italic">N/A</span>
                            }
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                </dl>

                <form asp-action="DeleteConfirmed">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger rounded-pill">Delete</button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>