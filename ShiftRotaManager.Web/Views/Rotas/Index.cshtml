@model IEnumerable<ShiftRotaManager.Data.Models.Rota>

@{
    ViewData["Title"] = "Rotas";
}

<h1 class="text-center mb-4">Shift Rotas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary rounded-pill">Create New Rota Assignment</a>
</p>
<table class="table table-striped table-hover rounded-3 overflow-hidden">
    <thead class="bg-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                Shift Name
            </th>
            <th>
                Assigned Team Member
            </th>
            <th>
                Paired Team Member
            </th>
            <th>
                Status
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shift.Name)
                </td>
                <td>
                    @(item.TeamMember?.FirstName + " " + item.TeamMember?.LastName ?? "N/A (Open Shift)")
                </td>
                <td>
                    @(item.PairedTeamMember?.FirstName + " " + item.PairedTeamMember?.LastName ?? "N/A")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-pill">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-pill">Delete</a>
                    @if (item.Status == ShiftRotaManager.Data.Models.RotaStatus.Open)
                    {
                        <a asp-action="AssignOpenShift" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success rounded-pill">Assign</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>