@model IEnumerable<ShiftRotaManager.Data.Models.Rota>
@using ShiftRotaManager.Data.Models

@{
    ViewData["Title"] = "Rotas";

    // Helper function to get the appropriate badge class and text for a RotaStatus
    (string, string) GetStatusBadge(RotaStatus status)
    {
        return status switch
        {
            RotaStatus.Assigned => ("text-bg-success", "Assigned"),
            RotaStatus.Illness => ("text-bg-warning", "Illness"),
            RotaStatus.Open => ("text-bg-secondary", "Open"),
            _ => ("text-bg-light text-dark", status.ToString())
        };
    }
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-0">Manage Rotas</h1>
        <p class="text-muted mb-0">Organize and view shift rotas for your teams.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary rounded-pill px-4 py-2 shadow-sm">
        <i class="bi bi-calendar-plus-fill me-2"></i>Create New Rota
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th scope="col" class="ps-4">@Html.DisplayNameFor(model => model.FirstOrDefault()!.Date)</th>
                        <th scope="col">Shift Name</th>
                        <th scope="col">Assigned Member</th>
                        <th scope="col">Paired Member</th>
                        <th scope="col" class="text-center">@Html.DisplayNameFor(model => model.FirstOrDefault()!.Status)</th>
                        <th scope="col" class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            var (badgeClass, badgeText) = GetStatusBadge(item.Status);
                            <tr>
                                <td class="ps-4">@item.Date.ToString("D")</td>
                                <td class="fw-medium">@Html.DisplayFor(modelItem => item.Shift.Name)</td>
                                <td>
                                    @(item.TeamMember != null ? $"{item.TeamMember.FirstName} {item.TeamMember.LastName}" : (object)new Microsoft.AspNetCore.Html.HtmlString("<span class='text-muted fst-italic'>Open Shift</span>"))
                                </td>
                                <td>
                                     @if (item.PairedTeamMembers != null && item.PairedTeamMembers.Any())
                                        {
                                            @string.Join(", ", item.PairedTeamMembers.Select(tm => $"{tm.FirstName} {tm.LastName}"))
                                        }
                                        else
                                        {
                                            @:<span class="text-muted fst-italic">N/A</span>
                                        }
                                </td>
                                <td class="text-center">
                                    <span class="badge rounded-pill @badgeClass">@badgeText</span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="d-inline-flex gap-2">
                                        @if (item.Status == RotaStatus.Open)
                                        {
                                            <a asp-action="AssignOpenShift" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success rounded-circle" data-bs-toggle="tooltip" title="Assign Shift">
                                                <i class="bi bi-person-check-fill"></i>
                                            </a>
                                        }
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary rounded-circle" data-bs-toggle="tooltip" title="Edit">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-circle" data-bs-toggle="tooltip" title="Delete">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center p-4">
                                <p class="mb-1 text-muted">No rotas have been created yet.</p>
                                <a asp-action="Create" class="btn btn-sm btn-primary rounded-pill px-3 mt-2">Create the first one</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

